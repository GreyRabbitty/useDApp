{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "types": [
      "mocha",
      "node"
    ],
    "target": "ES2018",
    "outDir": "dist",
    "module": "commonjs",
    "composite": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "isolatedModules": true
  },
  "include": [
    "src",
    "src/**/*.json",
    "internal",
    "generate-hooks",
  ]
}
