{
  "include": [
    "src",
    "types",
    "playwright"
  ],
  "compilerOptions": {
    "types": [
      "mocha"
    ],
    "module": "commonjs",
    "target": "ES2018",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../coingecko"
    }
  ]
}
